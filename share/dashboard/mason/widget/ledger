    <tr>
      <th class='guid'>
        <a href='/ledger/<% $ledger->{guid} |h %>/invoice/<% $invoice->{guid} |h %>'><% $invoice->{ident} |h %></a></th>
      <td><% $invoice->{closed_at} |h %></td>
      <td><% mc($invoice->{total_amount}) |h %></td>
      <td>&nbsp;</td>
    </tr>
% }
    <tr class='total'>
      <th>Total</th>
