% my $invoices = $ledger->{unpaid_invoices}{items};
% my $total     = sumof(sub{ $_->{total_amount} }, @$invoices);
% my $total_due = $ledger->{amount_due};
  <table class="table">
    <thead>
    <tr>
      <th>Invoice No.</th>
      <th>Date</th>
      <th>Total</th>
      <th>Due</th>
